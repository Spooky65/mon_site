              $( document ).ready(function() {
                {% if theme == "sombre" %}
                darkMode();
                {% else %}
                lightMode();
                {% endif %}
                var miniature = document.getElementById('btn-miniature');
                var tooltip = new bootstrap.Tooltip(miniature);
                function lightMode() {
                  $( "#flexSwitchCheckTheme" ).prop('checked', false);
                  $("body").css("background-color","white");
                  $(".card").css("background-color","white");
                  $("body").css("color","black");
                  $(".border").css("color","black");
                  $(".alert").removeClass("alert-dark");
                  $(".alert").addClass("alert-success");
                  $(".modal-content").removeClass("bg-dark");
                  $(".modal-content").addClass("bg-light");
                }
                function darkMode() {
                  $( "#flexSwitchCheckTheme" ).prop('checked', true);
                  $("body").css("background-color","black");
                  $(".card").css("background-color","black");
                  $("body").css("color","white");
                  $("#contact_text").css("color","black");
                  $(".border").css("color","white");
                  $(".alert").removeClass("alert-success");
                  $(".alert").addClass("alert-dark");
                  $(".modal-content").removeClass("bg-light");
                  $(".modal-content").addClass("bg-dark");
                }
                $( "#btn-miniature" ).click(function() {
                  tooltip.show();
                  scroll(0, 10000);
                  setTimeout(function(){ tooltip.hide(); }, 3000);
                });
                $( "#flexSwitchCheckTheme" ).change(function() {
                  theme = (this.checked ? 'sombre' : 'claire')
                  if(theme == 'sombre') {
                    darkMode();
                  }else{
                    lightMode();
                  }
                  
                  $.ajax('{{ path('saveCookie') }}', {
                      method : "POST",
                      data: { 
                            name : "theme",
                            value : theme,  // you can pass some parameters to the controller here
                      }
                  });
                  return false; // this stops normal button behaviour from executing;
                });
              });
            </script>
